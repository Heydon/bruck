{
  "name": "bruck",
  "type": "module",
  "version": "0.0.1",
  "description": "The declarative interface prototyping tool.",
  "main": "index.html",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
